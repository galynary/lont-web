const nodemailer = require('nodemailer');

// Функция для отправки письма на электронную почту
async function sendEmailToOwner(data) {
  // Настройки для отправки письма через Gmail
  let transporter = nodemailer.createTransport({
    service: 'gmail',
    auth: {
      user: 'ваш_адрес@gmail.com', 
      pass: 'ваш_пароль'
    }
  });

  let mailOptions = {
    from: 'ваш_адрес@gmail.com', // От кого
    to: 'galyna.rybak.789@gmail.com', // Кому
    subject: 'Новая заявка на подключение интернета',
    text: `
      Полное имя: ${data.name}
      Email: ${data.email}
      Адрес: ${data.address}
      Телефон: ${data.phone}
      Тариф: ${data.tariff}
    `
  };

  // Отправка письма
  try {
    let info = await transporter.sendMail(mailOptions);
    console.log("Письмо отправлено: %s", info.messageId);
  } catch (error) {
    console.error("Ошибка отправки письма:", error);
  }
}

module.exports = sendEmailToOwner;
